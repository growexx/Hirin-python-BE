{
  "openapi": "3.0.1",
  "info": {
    "title": "Flask API with Basic Auth",
    "description": "A simple API with Basic Authentication",
    "version": "1.0.0"
  },
  "paths": {
    "/protected": {
      "get": {
        "summary": "Protected Route",
        "operationId": "getProtectedRoute",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "example": {
                  "message": "This is a protected route"
                }
              }
            }
          }
        }
      }
    },
    "/public": {
      "get": {
        "summary": "Public Route",
        "operationId": "getPublicRoute",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "example": {
                  "message": "This is a public route"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}
